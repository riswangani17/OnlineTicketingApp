{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/Web/Web.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "icon": { "color": "terminal.ansiBlue", "id": "database" },
      "label": "migration",
      "type": "shell",
      "command": "pwsh",
      "options": {
        "cwd": "${workspaceFolder}/src/Infrastructure"
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "terminal-cmd"
      },
      "label": "Run",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoExit",
        "-Command",
        "Write-Host 'Opened terminal for Web Development. Run dotnet watch run here or other commands.'"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Web"
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
